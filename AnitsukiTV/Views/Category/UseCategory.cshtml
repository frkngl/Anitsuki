    <style>
        .friendadd {
            position: absolute;
            width: 370px;
            height: calc(100vh - 60px);
            background-color: #000000;
            box-shadow: 0px 0px 0px 0px #313131;
            top: 60px;
            right: 0;
            transform: translateX(100%);
