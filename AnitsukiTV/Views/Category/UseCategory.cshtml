<script>
    document.querySelectorAll('nav a').forEach(link => {
        link.classList.remove('active');
        if (link.href === window.location.href) {
            link.classList.add('active');
        }
    });
    window.addEventListener("load", () => {
        const loader = document.querySelector(".loader");

        loader.classList.add("loader-hidden");
    })
    document.addEventListener('keydown', function (event) {
        if (event.code === 'Space' && event.target.tagName !== 'TEXTAREA' && event.target.tagName !== 'INPUT') {
            event.preventDefault();
            event.stopPropagation();
        }
    });

    jQuery.expr[':'].contains = function (a, i, m) {
        return jQuery(a).text().toUpperCase()
            .indexOf(m[3].toUpperCase()) >= 0;
    };
    $(document).ready(function () {
        $("#searchTags").keyup(function () {
            var value = $("#searchTags").val();
            if (value.length == 0) {
                $("#menuFull li").show();
            } else {
                $("#menuFull li").hide();
                $("#menuFull li:contains(" + value + ")").show();
            }

        });
    });
</script>
<script>
    const togglePositionalHeaderStyles = () => {
        if (window.scrollY > 0 && !header.classList.contains("header-change")) {
            header.classList.add("header-change");
        };
        if (window.scrollY === 0 && header.classList.contains("header-change")) {
            header.classList.remove("header-change");
        };
    };

    let timeoutID = null;
    const header = document.querySelector("header");
    togglePositionalHeaderStyles();
    window.addEventListener("scroll", () => {
        togglePositionalHeaderStyles();
        if (timeoutID) clearTimeout(timeoutID);
        timeoutID = setTimeout(() => {
            togglePositionalHeaderStyles();
        }, 50);
    });
</script>
<script>
    const videoElements = document.querySelectorAll(".splide__slide .video");

    videoElements.forEach(video => {
        let isMuted = true; // Başlangıçta ses durumu kapalı
        video.muted = isMuted; // Video başlangıçta sessiz

        const videoContainer = video.parentElement;
        const muteButton = videoContainer.querySelector('.mute-button');
        const textSecretButton = videoContainer.querySelector('.text-secret-button');
        const animeInfo = videoContainer.querySelector('.anime-info');

        // Mobil cihazları kontrol etme fonksiyonu
        function isMobileDevice() {
            return /Mobi|Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
        }

        // Video yükleme fonksiyonu
        function loadVideo() {
            if (video.dataset.src) {
                video.src = video.dataset.src; // video'nun gerçek kaynağını yükle
                video.load(); // Videoyu yükle
                video.removeEventListener('load', loadVideo); // Yükleme işlemini tamamla
            }
        }

        if (!isMobileDevice()) {
            if (muteButton) {
                muteButton.style.display = 'none'; // Başlangıçta mute butonunu gizle
            }
            if (animeInfo) {
                animeInfo.style.display = 'none'; // Başlangıçta anime bilgilerini gizle
            }

            // Video görünür olduğunda yükleme
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        loadVideo(); // Video görünür olduğunda yükle
                        observer.unobserve(entry.target); // Gözlemeyi durdur
                    }
                });
            });

            observer.observe(video); // Video'yu gözlemle

            videoContainer.addEventListener('mouseenter', () => {
                if (video.paused) { // Video duruyorsa oynat
                    video.play().catch(error => {
                        console.error("Video oynatılamadı:", error);
                    });
                }
                video.classList.add("active");
                if (muteButton) {
                    muteButton.style.display = 'block'; // Mute butonunu göster
                }
                if (animeInfo) {
                    animeInfo.style.display = 'block'; // Anime bilgilerini göster
                }
                if (textSecretButton) {
                    textSecretButton.style.display = 'block'; // Text secret butonunu göster
                }
            });

            videoContainer.addEventListener('mouseleave', () => {
                // Video alanından ayrıldığında video duracak ve görünürlük kaybolacak
                if (!video.paused) { // Video oynuyorsa durdur
                    video.pause(); // Video duracak
                }
                video.classList.remove("active");
                if (muteButton) {
                    muteButton.style.display = 'none'; // Mute butonunu gizle
                }
                if (animeInfo) {
                    animeInfo.style.display = 'none'; // Anime bilgilerini gizle
                }
                if (textSecretButton) {
                    textSecretButton.style.display = 'none'; // Text secret butonunu gizle
                }
            });

            // Mute butonuna tıklandığında ses aç/kapa
            if (muteButton) {
                muteButton.addEventListener('click', (event) => {
                    event.stopPropagation(); // Tıklamanın üst öğelere yayılmasını engelle
                    event.preventDefault(); // Varsayılan davranışı engelle

                    // Ses durumunu tersine çevir
                    isMuted = !isMuted;
                    video.muted = isMuted; // Video sesini aç/kapa

                    // Eğer ses açılıyorsa, ses seviyesini artır
                    if (!isMuted) {
                        video.volume = 0.5; // Ses seviyesini artır
                        muteButton.innerHTML = '<i class="bi bi-volume-up"></i>'; // Buton metnini değiştir
                    } else {
                        video.volume = 0; // Ses seviyesini sıfırla
                        muteButton.innerHTML = '<i class="bi bi-volume-mute"></i>'; // Buton metnini değiştir
                    }
                });
            }

            // Text secret butonuna tıklandığında anime bilgilerini yukarı/aşağı kaydır
            if (textSecretButton) {
                let isInfoVisible = true; // Anime bilgisi başlangıçta görünür

                textSecretButton.addEventListener('click', (event) => {
                    event.stopPropagation(); // Tıklamanın üst öğelere yayılmasını engelle
                    event.preventDefault(); // Varsayılan davranışı engelle

                    // Anime bilgilerini yukarı veya aşağı kaydır
                    if (isInfoVisible) {
                        animeInfo.style.transform = 'scale(1.025)'; // Aşağı kaydır
                        animeInfo.style.opacity = '0'; // Aşağı kaydır
                        textSecretButton.innerHTML = '<i class="bi bi-card-text"></i>';
                    } else {
                        animeInfo.style.transform = 'scale(1.025)';
                        animeInfo.style.opacity = '1'; // Yukarı kaydır
                        textSecretButton.innerHTML = '<i class="bi bi-card-text"></i>';
                    }
                    isInfoVisible = !isInfoVisible; // Görünürlük durumunu tersine çevir
                });
            }

        } else {
            video.style.display = 'none'; // Mobil cihazlar için video öğesini gizleme
            if (muteButton) {
                muteButton.style.display = 'none'; // Mobil cihazlarda mute butonunu gizle
            }
            if (textSecretButton) {
                textSecretButton.style.display = 'none'; // Mobil cihazlarda text secret butonunu gizle
            }
        }
    });
</script>

