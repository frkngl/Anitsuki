                        <li class="splide__slide">
                            <a href="@Url.RouteUrl("Video", new {episodeID = l.ID, animeName = l.TBLANIME.ANIMENAME.Replace(" ","-").ToLowerInvariant(), seasonNumber = l.TBLSEASON.SEASONNUMBER, episodeNumber = l.EPINUMBER })">
