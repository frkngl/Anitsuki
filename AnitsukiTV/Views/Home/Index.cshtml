    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @foreach (var ğ in Model.Anime.Where(x => x.ADMINSTATUS == true))
            {
                <div class="swiper-slide">
                    <img src="~/IMG/@ğ.BIGBANNER" alt="anime izle, türkçe altyazı anime izle, anitsuki" loading="lazy" />
                    <div class="inside">
                        <div class="title">
                            @ğ.ANIMENAME
                        </div>
