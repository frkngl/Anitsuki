                            @ğ.DETAIL.Substring(0, 300) ...
                        </div>

                        <a class="btn" href="@Url.RouteUrl("Anime Detay", new { animeID = ğ.ID, animeName = ğ.ANIMENAME.ToLowerInvariant().Replace(" ", "-"), seasonNumber = ğ.TBLSEASON?.FirstOrDefault(x => x.ANIMEID == ğ.ID)?.SEASONNUMBER ?? 0})">
                            <i class="fa-solid fa-play"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
        <div class="autoplay-progress">
            <svg viewBox="0 0 48 48">
                <circle cx="24" cy="24" r="20"></circle>
            </svg>
            <span></span>
        </div>
