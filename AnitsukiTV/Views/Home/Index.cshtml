<script>
    const video = document.querySelectorAll(".splide__slide .video");

    // Mobil cihazları kontrol etme fonksiyonu
    function isMobileDevice() {
        return /Mobi|Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
    }

    video.forEach(video => {
        let cached = false;
        let source = video.src;

        // Eğer mobil cihazda isek, video oynatma işlevselliğini devre dışı bırak
        if (!isMobileDevice()) {
            video.onmouseenter = () => {
                if (!cached) {
                    video.src = source;
                    cached = true;
                }
                video.play();
                video.volume = 0.05;
                video.classList.add("active");
            };

            video.onmouseleave = () => {
                video.pause();
                video.src = "";
                cached = false;
                video.classList.remove("active");
            };
        } else {
            // Mobil cihazlar için video öğesini gizleme veya farklı bir işlem yapma
