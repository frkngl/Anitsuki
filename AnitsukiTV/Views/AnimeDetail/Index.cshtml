    <meta content="tr" http-equiv="Content-Language" />
    <meta name="language" content="Turkish" />
    <meta name="geo.placename" content="Turkey" />
    <meta name="location" content="türkiye, tr, turkey" />
    <meta name="robots" content="noarchive" />
    <meta name="theme-color" content="#000000" />
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="anitsuki">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta property="og:title" content="@ViewBag.anime izle - anitsuki" />
    <meta property="og:url" content="https://anitsuki.com/AnimeDetail/Index/@ViewBag.anime" />
    <meta property="og:type" content="video.tv_show" />
    <meta property="og:description" content="@ViewBag.anime izle, @ViewBag.anime animesini türkçe altyazılı ve full hd seçeneğiyle ücretsiz olarak izleyin." />
    <meta name="robots" content="max-image-preview:large" />
