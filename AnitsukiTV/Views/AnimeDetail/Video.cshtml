                flex-direction: column;
                justify-content: start;
                align-items: start;
                overflow-y: auto;
            }

                .friendadd #menuFull11::-webkit-scrollbar {
                    display: none;
                }

                .friendadd #menuFull11 a {
                    color: white;
                    text-decoration: none;
                }


        .anime {
            position: absolute;
            width: 370px;
            height: calc(100vh - 60px);
            background-color: #101010;
            top: 60px;
            right: 0;
            transform: translateX(100%);
