    <style>
        .warning {
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(49, 49, 49, 0.9);
            position: fixed;
            z-index: 999999999;
            top: 0px;
            left: 0;
        }

            .warning .modal-warning-box {
                width: 350px;
                height: 180px;
                background-color: #000000;
                border-radius: 20px;
                padding: 10px;
            }

                .warning .modal-warning-box .text {
                    color: white;
                }

                    .warning .modal-warning-box .text .title {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                    }

                        .warning .modal-warning-box .text .title .title1 {
                            font-size: 1.5rem;
                            font-weight: 500;
                        }

                        .warning .modal-warning-box .text .title .title2 {
                            width: 50px;
                            height: 50px;
                        }

                            .warning .modal-warning-box .text .title .title2 img {
                                width: 100%;
                                height: 100%;
                                object-fit: cover;
                            }

                    .warning .modal-warning-box .text .des {
                        height: 70px;
                        font-size: 1rem;
                        font-style: normal;
                        padding-top: 10px;
                    }

                .warning .modal-warning-box .okbtn {
                    width: 100%;
                    height: auto;
                    display: flex;
                    padding-right: 7px;
                    justify-content: center;
                    justify-content: end;
                }

                    .warning .modal-warning-box .okbtn button {
                        padding: 3px;
                        border-radius: 5px;
                        border: none;
                        outline: none;
                        background-color: #FF7F00;
                        font-size: 1rem;
                        transition: all 0.3s;
                    }

                        .warning .modal-warning-box .okbtn button:hover {
                            background-color: #313131;
                            color: #FF7F00;
                        }

        .fansub {
            width: 100%;
            height: 100px;
            margin-top: 25px;
            color: #ffffff;
            padding-right: 1rem;
            line-height: 20px;
        }

            .fansub .title {
                color: #FF7F00;
                font-size: 1rem;
                font-weight: 600;
            }

            .fansub .des {
                color: #ffffff;
                font-size: 1rem;
            }

            .fansub .sitelink {
                color: #ffffff;
                font-size: 1rem;
            }

                .fansub .sitelink a {
                    color: #ffffff;
                    font-size: 1rem;
                    margin: 0px 5px;
                }

        .videoposter {
            position: relative;
            width: 100%;
        }

            .videoposter .poster {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 1;
            }

                .videoposter .poster img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    filter: brightness(0.6);
                }

                .videoposter .poster i {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%,-50%);
                    z-index: 2;
                    font-size: 4rem;
                    color: #ffffff;
                    cursor: pointer;
                }

        .like1.active a,
        .unlike1.active a {
            color: orange;
        }

        .like1 a,
        .unlike1 a {
            color: white;
        }

        img.lazy {
            opacity: 0; /* Başlangıçta görünmez */
            transition: opacity 0.5s ease-in; /* Geçiş efekti */
        }

        img {
            opacity: 1; /* Yüklenince görünür hale gelir */
        }

        .friendadd {
            position: absolute;
            width: 370px;
            height: calc(100vh - 60px);
            background-color: #101010;
            top: 60px;
            right: 0;
            transform: translateX(100%);
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
            transition: all 0.3s ease-in-out;
        }

            .friendadd.active {
                transform: translateX(0%);
            }

            .friendadd.full-screen {
                position: fixed; /* Sabit konumda olmasını sağlar */
                top: 60px;
                right: 0;
                width: 100%;
                height: calc(100vh - 60px);
                border-radius: 0; /* Kenar yuvarlamalarını kaldır */
                z-index: 1000; /* Diğer öğelerin üstünde görünmesi için */
                box-shadow: none;
            }

            .friendadd #friendaddclose {
                position: absolute;
                width: 30px;
                height: 30px;
                left: 10px;
                background-color: #cccc;
                display: none;
            }

                .friendadd #friendaddclose.active {
                    position: absolute;
                    width: 30px;
                    height: 30px;
                    left: 10px;
                    background-color: #cccc;
                    display: block;
                }

            .friendadd .searchhh {
                position: relative;
                width: 200px;
                height: 40px;
                margin-left: 50%;
                transform: translateX(-50%);
                margin-top: 25px;
                margin-bottom: 15px;
            }

                .friendadd .searchhh .fa-magnifying-glass {
                    position: absolute;
                    top: 50%;
                    left: 10px;
                    z-index: 9;
                    font-size: 1rem;
                }

                .friendadd .searchhh input {
                    position: absolute;
                    top: 0;
                    left: 0;
                    background-color: #313131;
                    color: #ffffff;
                    border: none;
                    width: 100%;
                    height: 100%;
                    border-radius: 20px;
                    padding: 0px 0px 0px 35px;
                }

            .friendadd #menuFull11 {
                list-style-type: none;
                padding: 0px 10px;
                width: 100%;
                height: calc(100vh - 150px);
