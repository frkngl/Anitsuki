        .user ul li a:hover {
            background-color: #ffffff;
            color: #000000 !important;
        }

        header #nabermudur ul {
            max-height: 300px;
            overflow-y: auto;
        }

        #nabermudur button {
            background-color: transparent;
            border: none;
            outline: none;
            color: orange;
            transition: all 0.3s;
        }

            #nabermudur button:hover {
                color: #ffffff;
            }
