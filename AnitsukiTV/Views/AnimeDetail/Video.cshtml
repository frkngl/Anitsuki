                                            <div id="comment-error" style="display:none;"></div>
                                            <span id="like-count-@y.ID">@y.TBLEPISODELIKE.Where(y => y.LIKESTATUS == true).Count()</span>

                                            <div class="unlike1" data-comment-id="@y.ID">
                                                <a style="text-decoration: none; cursor: pointer; color: white;" onclick="handleLikeOrUnlike1(this, @y.ID, @userID, false)">
                                                    <i style="margin-right:2px;" class="bi bi-hand-thumbs-down"></i>
                                                    <span id="unlike-count-@y.ID">@y.TBLEPISODELIKE.Where(y => y.LIKESTATUS == false).Count()</span>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="like1" style="margin-right:15px;" data-comment-id="@y.ID">
                                                <a style="text-decoration: none; cursor: pointer; color: white;" onclick="handleLikeOrUnlike1(this, @y.ID, @userID, true)">
                                                    <i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i>
                                                    <span id="like-count-@y.ID">@y.TBLEPISODELIKE.Where(y => y.LIKESTATUS == true).Count()</span>
                                                </a>
                                            </div>
                                            <div class="unlike1 active" data-comment-id="@y.ID">
                                                <a style="text-decoration: none; cursor: pointer; color: white;" onclick="handleLikeOrUnlike1(this, @y.ID, @userID, false)">
                                                    <i style="margin-right:2px;" class="bi bi-hand-thumbs-down"></i>
                                                    <span id="unlike-count-@y.ID">@y.TBLEPISODELIKE.Where(y => y.LIKESTATUS == false).Count()</span>
                                                </a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div style="margin-right:15px;" class="like1" data-comment-id="@y.ID">
                                            <a style="text-decoration:none; color:white;" href="/LoginSignIn/Login">
                                                <i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i>
                                                @y.TBLEPISODELIKE.Where(y => y.LIKESTATUS == true).Count()
