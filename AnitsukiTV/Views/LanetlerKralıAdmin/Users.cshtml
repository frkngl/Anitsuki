@using AnitsukiTV.Models
@model List<TBLUSER> 
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div style="position:relative;" class="card-body">
                <nav style="position:absolute; right:0;" class="navbar navbar-expand-lg bg-body-tertiary">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <form action="@Url.Action("Users", "LanetlerKralıAdmin")" class="d-flex" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" name="user" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Ara</button>
                            </form>
                        </div>
                    </div>
                </nav>
                <p class="card-description">
                    Kullanıcılar
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>RESIM</th>
                            <th>KULLANICI ADI</th>
                            <th>TARIH</th>
                            <th>Güncelle</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.OrderByDescending(x => x.ID))
                        {
                            <tr>
                                <td>@x.ID</td>
                                <td>
                                    @if (x.PICTURE != null)
                                    {
                                        <img style="width:100px; height:100px; object-fit:cover;" src="~/IMG/@x.PICTURE" />
                                    }
                                    else
                                    {
                                        <img style="width:100px; height:100px; object-fit:cover;" src="~/IMG/stockuser.png" />
                                    }
                                </td>
                                <td>@x.USERNAME</td>
                                <td>@x.DATE.Value.ToString("dd.MM.yyyy")</td>
                                <td><a class="btn btn-warning" href="/LanetlerKralıAdmin/UpdateUser/@x.ID">Güncelle</a></td>
                                <td>
                                    @if (x.STATUS == true)
                                    {
                                        <a href="/LanetlerKralıAdmin/ActivePassive5/@x.ID" class="btn btn-success btn-sm">Aktif</a>
                                    }
                                    else
                                    {
                                        <a href="/LanetlerKralıAdmin/ActivePassive5/@x.ID" class="btn btn-warning btn-sm">Pasif</a>
                                    }
                                </td>
                                <td>@Html.ActionLink("Sil", "Deleteeeee", new { id = x.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm" + "('Bu Kullanıcıyı silmek istediğinize emin misiniz?');" })</td>
                                <td><a style="color:#ffffff;" href="/LanetlerKralıAdmin/UserDetail/@x.ID" class="btn btn-light">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

