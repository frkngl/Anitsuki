@using AnitsukiTV.Models
@model List<TBLADMIN>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><a class="btn btn-primary" href="/LanetlerKralıAdmin/AddAdmin">Admin Ekle</a></h4>
                <p class="card-description">
                    Add class <code>.table</code>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Password</th>
                            <th>Tarih</th>
                            <th>Admin Rolü</th>
                            <th>Güncelle</th>
                            <th>Durum</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.USERNAME</td>
                                <td>@x.PASSWORD</td>
                                <td>@x.DATE.Value.ToString("dd.MM.yyyy")</td>
                                <td>@x.TBLADMINROLE.ROLENAME</td>
                                <td><a class="btn btn-warning" href="/LanetlerKralıAdmin/UpdateAdmin/@x.ID">Güncelle</a></td>
                                <td>
                                    @if (x.STATUS == true)
                                    {
                                        <a href="/LanetlerKralıAdmin/ActivePassive/@x.ID" class="btn btn-success btn-sm">Aktif</a>
                                    }
                                    else
                                    {
                                        <a href="/LanetlerKralıAdmin/ActivePassive/@x.ID" class="btn btn-warning btn-sm">Pasif</a>
                                    }
                                </td>
                                <td>@Html.ActionLink("Sil", "Sil", new { id = x.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm" + "('Bu Admini silmek istediğinize emin misiniz?');" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


