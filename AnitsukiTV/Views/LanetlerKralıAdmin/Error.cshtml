@using AnitsukiTV.Models
@model List<TBL404>
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/toastr.min.css" />
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div style="position:relative;" class="card-body">
                <h4 class="card-title"><a class="btn btn-primary" href="/LanetlerKralıAdmin/AddError">Video Ekle</a></h4>
                <p class="card-description">
                    404 Videolar
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Video Adı</th>
                            <th>Guncelle</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.OrderByDescending(x => x.ID))
                        {
                            <tr>
                                <td>@x.ID</td>
                                <td>@x.TEXT</td>
                                <td><a class="btn btn-warning" href="/LanetlerKralıAdmin/UpdateError/@x.ID">Güncelle</a></td>
                                <td>
                                    @if (x.STATUS == true)
                                    {
                                        <button class="btn btn-success btn-sm toggle-status" data-id="@x.ID">Aktif</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-warning btn-sm toggle-status" data-id="@x.ID">Pasif</button>
                                    }
                                </td>
                                <td>@Html.ActionLink("Sil", "ErrorDelete", new { id = x.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm" + "('Bu Bölümü silmek istediğinize emin misiniz?');" })</td>
                                <td><a style="color:#ffffff;" href="/LanetlerKralıAdmin/ErrorDetail/@x.ID" class="btn btn-light">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>

<script>
    $(document).on('click', '.toggle-status', function () {
        var id = $(this).data('id');
        var button = $(this);

        $.ajax({
            url: '/LanetlerKralıAdmin/ActivePassive10/' + id,
            type: 'POST',
            success: function (result) {
                // Durum değiştiyse butonu güncelle
                if (result.status) {
                    button.removeClass('btn-warning').addClass('btn-success').text('Aktif');
                } else {
                    button.removeClass('btn-success').addClass('btn-warning').text('Pasif');
                }
            },
            error: function () {
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            }
        });
    });
</script>


