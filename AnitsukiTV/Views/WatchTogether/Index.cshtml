            audio.play();
            btnToggle.textContent = "pause";
        } else {
            audio.pause();
            btnToggle.textContent = "play_arrow";
        }
    });

    btnRestart.addEventListener('click', () => {
        audio.currentTime = 0;
        audio.play();
    });

