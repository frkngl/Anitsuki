@using AnitsukiTV.Models
@model List<TBLADMINROLE>


@{
    ViewBag.Title = "AdminRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/toastr.min.css" />
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><a class="btn btn-primary" href="/LanetlerKralıAdmin/AddRole">Role Ekle</a></h4>
                <p class="card-description">
                    Admin Role
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ID</td>
                                <td>@x.ROLENAME</td>
                                <td><a class="btn btn-warning" href="/LanetlerKralıAdmin/UpdateRole/@x.ID">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>
@if (TempData["success"] != null)
{
    <script type="text/javascript">
        toastr["success"]("@TempData["success"]", "Yeni Kayıt")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "10000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

