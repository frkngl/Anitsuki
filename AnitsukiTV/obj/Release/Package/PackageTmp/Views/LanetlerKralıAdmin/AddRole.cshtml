@model  AnitsukiTV.Models.TBLADMINROLE
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddRole", "LanetlerKralıAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="forms-sample">
        <div class="form-group">
            <label for="exampleInputName1">Role Adı</label>
            @Html.TextBoxFor(x => x.ROLENAME, new { @style = "width:100%; border:1px solid #000000;" })
        </div>
        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
        <a style="color:#000000;" href="/LanetlerKralıAdmin/AdminRole" class="btn btn bg-light">Vazgeç</a>
    </form>
}

