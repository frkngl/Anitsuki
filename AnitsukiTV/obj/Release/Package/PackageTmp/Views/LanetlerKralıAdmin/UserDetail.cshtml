@using AnitsukiTV.Models
@model List<TBLUSER>
@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@foreach (var x in Model)
{
    <div style="width:100%; display:flex;justify-content:center;" class="form-group">
        <label>Resim</label>
        <br />
        @if (x.PICTURE != null)
        {
            <img width="300" height="300" ; style=" border-radius:50%;  object-fit:cover;" src="~/USERIMG/@x.PICTURE" />
        }
        else
        {
            <img width="300" height="300" ; style=" border-radius:50%;  object-fit:cover;" src="~/USERIMG/stockuser.png" />
        }

    </div>
    <div class="form-group">
        <label for="exampleInputName1">ID</label>
        <textarea style="width:100%; height:30px;" readonly>@x.ID</textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword4">Username</label><br />
        <textarea style="width:100%; height:30px;" readonly>@x.USERNAME</textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword4">Mail</label><br />
        <textarea style="width:100%; height:30px;" readonly>@x.MAIL</textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Kayıt Tarihi</label><br />
        <textarea style="width:100%; height:30px;" readonly>@x.DATE.Value.ToString("dd.MM.yyyy")</textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Hakkında</label><br />
        <textarea style="width:100%; height:300px;" readonly>@x.ABOUT</textarea>
    </div>
}
<a style="color:#ffffff;" class="btn btn-light" href="/LanetlerKralıAdmin/Users">Geri Dön</a>

