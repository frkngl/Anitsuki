@model AnitsukiTV.Models.TBL404
@{
    ViewBag.Title = "AddError";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddError", "LanetlerKralıAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <form class="forms-sample">
        <div style="width:100%; height:auto; display:flex;align-items:center; justify-content:space-around;" class="form-group">
            <div>
                <div>
                    <label for="exampleInputPassword4">Video</label>
                    <br />
                    <video controls class="Video" width="400" height="250" style="border:1px solid #000000; object-fit:cover;"></video>
                    <input class="form-control" id="resim" accept=".mp4" type="file" onchange="$('.Video')[0].src = window.URL.createObjectURL(this.files[0])" name="Video" />
                </div>
            </div>

        </div>
        <div class="form-group">
            <label for="exampleInputName1">Sahne Adı</label><br />
            @Html.TextBoxFor(x => x.TEXT, new { @style = "width:100%; border:1px solid #000000;padding:3px;", @required = "@required" })
        </div>
        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
        <a style="color:#ffffff;" class="btn btn-light" href="/LanetlerKralıAdmin/Error">Vazgeç</a>
    </form>

}

