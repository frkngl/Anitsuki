
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center;">Anitsuki Admin Panele Hoş Geldin @HttpContext.Current.User.Identity.Name</h2>
<div style="width:100%; margin:100px 0px; height:auto;display:flex;align-items:center;justify-content:center;">
    <div style="text-align:center;">
        <h2>Anime Sayısı</h2>
        <h2>@ViewBag.animecount</h2>
    </div>
    <div style="text-align:center; margin:0px 10px 0px 20px;">
        <h2>Bölüm Sayısı</h2>
        <h2>@ViewBag.episodecount</h2>
    </div>
    <div style="text-align:center; margin: 0px 20px 0px 10px;">
        <h2>Aktif Kullanıcı</h2>
        <h2>@ViewBag.usercounttrue</h2>
    </div>
    <div style="text-align:center;">
        <h2>Pasif Kullanıcı</h2>
        <h2>@ViewBag.usercountfalse</h2>
    </div>
</div>

