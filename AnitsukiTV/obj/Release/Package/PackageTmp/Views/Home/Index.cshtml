    video.forEach(video => {
        let cached = false;
        let source = video.src;

        // Eğer mobil cihazda isek, video oynatma işlevselliğini devre dışı bırak
        if (!isMobileDevice()) {
            video.onmouseenter = () => {
                if (!cached) {
                    video.src = source;
                    cached = true;
                }
                video.play();
                video.volume = 0.05;
                video.classList.add("active");
            };

            video.onmouseleave = () => {
                video.pause();
                video.src = "";
                cached = false;
                video.classList.remove("active");
            };
