@using AnitsukiTV.Models
@model TabeList


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Model.VideoInfo.AnimeTitle @Model.VideoInfo.SeasonNumber. Sezon @Model.VideoInfo.EpisodeNumber. Bölüm izle - Anitsuki</title>
    <meta name="description" content="@Model.VideoInfo.AnimeTitle @Model.VideoInfo.SeasonNumber. Sezon @Model.VideoInfo.EpisodeNumber. Bölüm izle, @Model.VideoInfo.AnimeTitle animesini türkçe altyazılı ve full hd seçeneğiyle ücretsiz olarak izleyin." />
    <meta content="tr" http-equiv="Content-Language" />
    <meta name="language" content="Turkish" />
    <meta name="geo.placename" content="Turkey" />
    <meta name="location" content="türkiye, tr, turkey" />
    <meta name="robots" content="noarchive" />
    <meta name="theme-color" content="#000000" />
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="anitsuki">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta property="og:title" content="@Model.VideoInfo.AnimeTitle @Model.VideoInfo.SeasonNumber. Sezon @Model.VideoInfo.EpisodeNumber. Bölüm izle - anitsuki" />
    <meta property="og:url" content="https://diziwatch.net/fullmetal-alchemist-brotherhood-1-sezon-1-bolum-izle-xth7k/" />
    <meta property="og:type" content="video.episode" />
    <meta property="og:description" content="@Model.VideoInfo.AnimeTitle @Model.VideoInfo.SeasonNumber. Sezon @Model.VideoInfo.EpisodeNumber. Bölüm izle, @Model.VideoInfo.AnimeTitle animesini türkçe altyazılı ve full hd seçeneğiyle ücretsiz olarak izleyin." />
    <meta name="robots" content="max-image-preview:large" />
    <!--FONT AWESOME-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--GOOGLE ICON FONT-->
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <!--SPLIDE CSS-->
    <link rel="stylesheet" href="~/splidejs/splide/dist/css/splide.min.css" type="text/css">
    <link rel="stylesheet" href="~/splidejs/splide/dist/css/themes/splide-skyblue.min.css" type="text/css">
    <!--SWIPER CSS-->
    <link rel="stylesheet" href="~/swiper/swiper-bundle.min.css" type="text/css">
    <!--BOOTSTRAP CSS-->
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.min.css" type="text/css">
    <!--CSS-->
    <link rel="stylesheet" href="~/Anitsuki/css/main.css" type="text/css">
    <link rel="stylesheet" href="~/Anitsuki/css/main.css.map" type="text/css">
    <link rel="stylesheet" href="~/Anitsuki/css/video.css" type="text/css">
    <!--TITLE IMG-->
    <link rel="shortcut icon" href="~/Anitsuki/img/aylogo.png" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6247305840090216" crossorigin="anonymous"></script>
</head>

<body>
    <div id="loader">
        <div id="box1">
            <img src="~/Anitsuki/img/arisu-aris.gif">
        </div>
    </div>
    <!----------------------------------------------------HEADER START---------------------------------------------------->
    <header style="background-color: #000000;">
        <div class="container-xl">
            <div class="row">
                <div class="logo col-2">
                    <a href="/Home/Index"><img src="~/Anitsuki/img/logo.png" alt="anime izle, türkçe altyazı anime izle, anitsuki"><img class="logomobile" src="~/Anitsuki/img/aylogo.png" alt="anime izle, türkçe altyazı anime izle, anitsuki"></a>
                </div>

                <input style="display: none;" type="checkbox" id="check">
                <label for="check" class="hamburger-btn col-1">
                    <span></span>
                </label>

                <nav class="col-8">
                    <ul>
                        <li>
                            <a href="/Home/Index"><i class="fa-solid fa-house"></i> Anasayfa</a>
                        </li>
                        <li>
                            <a href="/Category/Index"><i class="fa-solid fa-list"></i> Animeler</a>
                        </li>
                    </ul>
                </nav>
                <div class="box col-2">
                    <div class="search">
                        <a href="/Category/Index"><i class="bi bi-search"></i></a>
                    </div>
                    <div class="user">
                        @{ AnitsukiTVEntities db = new AnitsukiTVEntities();}
                        @if (Request.IsAuthenticated)
                        {
                            var currentUser = db.TBLUSER.FirstOrDefault(u => u.USERNAME == User.Identity.Name);
                            if (currentUser != null && currentUser.PICTURE != null)
                            {
                                <a href="/User/Index"><img width="40" height="40" style="border-radius:50%; object-fit:cover;" src="~/IMG/@currentUser.PICTURE"></a>
                            }
                            else
                            {
                                <a href="/User/Index"><img width="40" height="40" style="border-radius: 50%; object-fit: cover;" src="~/IMG/stockuser.png"></a>
                            }
                            <a href="/LoginSignIn/SignOut"><i class="bi bi-box-arrow-right"></i></a>
                        }
                        else
                        {
                            <a href="/LoginSignIn/Login"><i class="bi bi-person"></i></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!----------------------------------------------------HEADER END---------------------------------------------------->
    <!----------------------------------------------------CONTENT START---------------------------------------------------->
    <div class="content">
        <div class="videoplayer" tabindex="0">
            <div class="postervideo">
                <img class="poster" src="~/Anitsuki/img/poster.png" alt="anime izle, türkçe altyazı anime izle, anitsuki" />
                <img class="postermobil" src="~/Anitsuki/img/postermobil.png" alt="anime izle, türkçe altyazı anime izle, anitsuki">
                <span class="material-symbols-outlined posterbtn">
                    play_circle
                </span>
            </div>
            <video preload="metadata" class="main-video" playsinline>
                @foreach (var x in Model.VideoInfo.Episode)
                {
                    if (x.EP1 != null)
                    {
                        <source src="~/Videos/@x.EP1" size="360" type="video/mp4">
                    }
                    if (x.EP2 != null)
                    {
                        <source src="~/Videos/@x.EP2" size="480" type="video/mp4">
                    }
                    if (x.EP3 != null)
                    {
                        <source src="~/Videos/@x.EP3" size="720" type="video/mp4">
                    }
                    if (x.EP4 != null)
                    {
                        <source src="~/Videos/@x.EP4" size="1080" type="video/mp4">
                    }
                }
            </video>
        </div>
        <div class="head">
            <div class="episodeandcomment">
                <div class="episodetail">
                    @foreach (var y in Model.VideoInfo.Episode)
                    {
                        <img src="~/IMG/@y.BANNER" alt="anime izle, türkçe altyazı anime izle, anitsuki">
                        <div class="detail">
                            <div class="title">
                                <a href="/AnimeDetail/Index/@y.ANIMEID">@y.TBLANIME.ANIMENAME </a>
                            </div>
                            <div class="episodename">
                                <span>S.@y.TBLSEASON.SEASONNUMBER</span> -
                                <span>B.@y.EPINUMBER</span> @y.EPISODENAME
                            </div>
                            <div class="time">
                                <i class="bi bi-clock"></i> @y.TIME
                            </div>
                            <div class="date">
                                <i class="bi bi-calendar"></i> @y.DATE.Value.ToString("dd.MM.yyyy")
                            </div>
                            <div class="likeandunlikerating">
                                <div class="rating">
                                    Beğendiniz mi?
                                </div>
                                <div class="likeandunlike">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        var userId = db.TBLUSER.Where(u => u.USERNAME == User.Identity.Name).Select(u => u.ID).FirstOrDefault();
                                        var likeExists = y.TBLEPISODELIKE.Any(x => x.USERID == userId);

                                        if (likeExists)
                                        {
                                            <div style="color:white; width:100px;display:flex;">
                                                <div style="width:50%;">
                                                    <i class="bi bi-hand-thumbs-up"></i> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == true).Count()
                                                </div>
                                                <div style="width:50%;">
                                                    <i class="bi bi-hand-thumbs-down"></i> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == false).Count()
                                                </div>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="like">
                                                <a style="text-decoration:none; color:white;" href="/AnimeDetail/LikeEpisode/@y.ID"><i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == true).Count()</a>
                                            </div>
                                            <div class="unlike">
                                                <a style="text-decoration:none; color:white;" href="/AnimeDetail/UnlikeEpisode/@y.ID"><i style="margin-right:2px;" class="bi bi-hand-thumbs-down"></i> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == false).Count()</a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="like">
                                            <a style="color:#ffffff; text-decoration:none;" href="/LoginSignIn/Login"><i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == true).Count()</a>
                                        </div>
                                        <div class="unlike">
                                            <a style="color: #ffffff; text-decoration: none" href="/LoginSignIn/Login"><i style="margin-right:2px;" class="bi bi-hand-thumbs-down"> @y.TBLEPISODELIKE.Where(x => x.LIKESTATUS == false).Count()</i></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="commentplace">
                    <div class="headcomment">
                        <div class="title">
                            <i class="bi bi-pencil-square"></i> Düşüncelerinizi Yazın
                        </div>
                        @Html.Action("LeaveComment1", "AnimeDetail")

                    </div>
                </div>

                @if (!User.Identity.IsAuthenticated)
                {
                   
                }

                @Html.Action("Comments1", "AnimeDetail")
            </div>
            <div class="nextandprevepisode">
                @{
                    if (Model.VideoInfo.OncekiBolum != null && Model.VideoInfo.OncekiBolum.Any())
                    {
                        <div class="prev">
                            <div class="title">
                                <i class="bi bi-arrow-left"></i> Önceki Bölüm
                            </div>
                            @foreach (var episode in Model.VideoInfo.OncekiBolum.Where(x => x.STATUS == true))
                            {
                                <a href="@Url.Action("Video", "AnimeDetail", new { id = episode.ID })">
                                    <div class="box">
                                        <img src="~/IMG/@episode.BANNER" alt="anime izle, türkçe altyazı anime izle, anitsuki">
                                        <div class="animedetail">
                                            <div class="episodename">
                                                <span>S.@episode.TBLSEASON.SEASONNUMBER</span> -
                                                <span>B.@episode.EPINUMBER</span> @episode.EPISODENAME
                                            </div>
                                            <div class="time">
                                                <i class="bi bi-clock"></i> @episode.TIME
                                            </div>
                                            <div class="date">
                                                <i class="bi bi-calendar"></i> @episode.DATE.Value.ToString("dd.MM.yyyy")
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="prev">
                            <div class="title">
                                <i class="bi bi-eye"></i> İlk bölümdesiniz
                            </div>
                        </div>
                    }
                }

                @{
                    if (Model.VideoInfo.SonrakiBolum != null && Model.VideoInfo.SonrakiBolum.Any())
                    {
                        <div class="next">
                            <div class="title">
                                Sonraki Bölüm
                                <i class="bi bi-arrow-right"></i>
                            </div>
                            @foreach (var episode in Model.VideoInfo.SonrakiBolum.Where(x => x.STATUS == true))
                            {
                                <a href="@Url.Action("Video", "AnimeDetail", new { id = episode.ID })">
                                    <div class="box">
                                        <img src="~/IMG/@episode.BANNER" alt="anime izle, türkçe altyazı anime izle, anitsuki">
                                        <div class="animedetail">
                                            <div class="episodename">
                                                <span>S.@episode.TBLSEASON.SEASONNUMBER</span> -
                                                <span>B.@episode.EPINUMBER</span> @episode.EPISODENAME
                                            </div>
                                            <div class="time">
                                                <i class="bi bi-clock"></i> @episode.TIME
                                            </div>
                                            <div class="date">
                                                <i class="bi bi-calendar"></i> @episode.DATE.Value.ToString("dd.MM.yyyy")
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="next">
                            <div class="title">
                                Güncel Bölümdesiniz
                                <i class="bi bi-check2"></i>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <!----------------------------------------------------CONTENT START---------------------------------------------------->
    <!----------------------------------------------------FOOTER START---------------------------------------------------->
    <footer>
        <div class="footerimg">
        </div>
        <div class="detail">
            <div class="page">
                <div class="title">
                    Sayfalar
                </div>
                <ul>
                    <li><a href="/Home/About">Hakkımızda</a></li>
                    <li><a href="/Home/PrivacyPolicy">Gizlilik Politikası</a></li>
                </ul>
            </div>
            <div class="social">
                <div class="title">
                    Sosyal Medyalar
                </div>
                <ul>
                    <li><a href="https://www.youtube.com/channel/UC3AfwO_XmAvYEtw6FWZXZcw"><i class="fa-brands fa-youtube fa-l"></i> Youtube</a></li>
                    @*<li><a href="#"><i class="fa-brands fa-x-twitter fa-l"></i> Twitter-X</a></li>*@
                    <li><a href="https://www.instagram.com/anitsukitv/"><i class="fa-brands fa-instagram fa-l"></i> Instagram</a></li>
                    <li><a href="https://discord.gg/j6k56TRk"><i class="bi bi-discord"></i> Discord</a></li>
                </ul>
            </div>
            <div class="contact">
                <div class="title">
                    İletişim
                </div>
                <ul>
                    <li>info@anitsuki.com</li>
                </ul>
            </div>
        </div>
        <div class="copyright ">
            <img src="~/Anitsuki/img/aylogo.png" alt="anime izle, türkçe altyazı anime izle, anitsuki">
            <div class="text">
                Copyright © Anitsuki 2024. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>
    <!----------------------------------------------------FOOTER END---------------------------------------------------->
</body>

</html>
