                        </div>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div style="margin-left:0px;" class="search">
                            <a href="#" id="toggleFriendAdd">
                                <i style="font-size:1.8rem !important;" class="bi bi-person-add"></i>
                            </a>
                        </div>
                    }
                    <div style="margin-right:-10px;" class="search">
                        <a href="@Url.RouteUrl("Animeler")"><i class="bi bi-search"></i></a>
                    </div>
                    <div class="friendadd">
                        <div style="position:relative;" id="followersContent">
                            <button id="friendaddclose" class="btn-close"></button>
                            <div class="searchhh">
                                <i style="color:white;" class="fa-solid fa-magnifying-glass fa-xl"></i>
                                <input type="text" autocomplete="off" name="searchTags11" id="searchTags11" placeholder="Arkadaş Ara..." />
                            </div>
                            <ul id="menuFull11" style="display: none; overflow-y: auto;">
                                @foreach (var user in Model.VideoInfo.Users.Where(x => x.STATUS == true))
                                {
                                    <li style="margin:10px 0px;width:100%; display:flex; justify-content:space-between; align-items:center;">
                                        <div>
                                            @{
                                                AnitsukiTVEntities y = new AnitsukiTVEntities();
                                                var Followers = y.TBLFOLLOWERS.Where(f => f.FOLLOWEDID == user.ID).Select(f => f.TBLUSER).ToList();
                                                ViewBag.FollowersCountt = Followers.Count(x => x.STATUS == true);
                                            }
                                            <a style="display:flex;" href="@Url.RouteUrl("Profil", new { userName = user.USERNAME.ToLower().Replace("ı", "i").Replace("ç", "c").Replace("ö", "o").Replace("ü", "u").Replace("ğ", "g").Replace("ş", "s").Replace(" ", "-").Replace("?", "").Replace("!", "").Replace(">", "").Replace("<", "").Replace("&", "").Replace("%", "").Replace("$", "").Replace("#", "").Replace("@", "").Replace(":", "").Replace(";", "").Replace("/", "").Replace("\\", "").Replace(".","").Replace(",","") })">
                                                @if (user.PICTURE != null)
                                                {
                                                    <img style="width:50px; height:50px; object-fit:cover; margin-right:7px; border-radius:50%;" src="~/IMG/@user.PICTURE" />
                                                    <div>
                                                        <span style="font-size: 0.9rem;">@user.USERNAME</span><br />
                                                        <span style="font-size: 0.8rem; color: #cccccc;">Takipçi:@ViewBag.FollowersCountt</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <img style="width: 50px; height: 50px; object-fit: cover; margin-right: 7px; border-radius: 50%;" src="~/IMG/stockuser.png" />
                                                    <div>
                                                        <span style="font-size: 0.9rem;">@user.USERNAME</span><br />
                                                        <span style="font-size: 0.8rem; color: #cccccc;">Takipçi:@ViewBag.FollowersCountt</span>
                                                    </div>
                                                }
                                            </a>
                                        </div>
                                        <div style="color:white;">
                                            <button onclick="followUser  (@user.ID, this)" style="background-color: transparent; border: none; color: #FF7F00;">
                                                @if (ViewBag.FollowedUserIds.Contains(user.ID))
                                                {
                                                    <i style="font-size:2.5rem;" class="bi bi-person-fill-dash"></i> <!-- Takipten çıkma simgesi -->
                                                }
                                                else
                                                {
                                                    <i style="font-size: 2.5rem;" class="bi bi-person-fill-add"></i> <!-- Takip etme simgesi -->
                                                }
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="user">
                        <div style="height:60px; display:flex; align-items:center; margin-left:10px;" class="dropdown">
                            @{ AnitsukiTVEntities db = new AnitsukiTVEntities(); }
                            @if (User.Identity.IsAuthenticated)
                            {
                                var currentUser = db.TBLUSER.FirstOrDefault(u => u.USERNAME == User.Identity.Name);
                                string userNameUrl = User.Identity.Name.ToLower().Replace("ı", "i").Replace("ç", "c").Replace("ö", "o").Replace("ü", "u").Replace("ğ", "g").Replace("ş", "s").Replace(" ", "-").Replace("?", "").Replace("!", "").Replace(">", "").Replace("<", "").Replace("&", "").Replace("%", "").Replace("$", "").Replace("#", "").Replace("@", "").Replace(":", "").Replace(";", "").Replace("/", "").Replace("\\", "").Replace(".", "").Replace(",", "");

                                <button style="background-color:transparent; border:none; outline:none; color:orange;" class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (currentUser != null && currentUser.PICTURE != null)
                                    {
                                        <img width="40" height="40" style="border-radius:50%; object-fit:cover;" src="~/IMG/@currentUser.PICTURE" />
                                    }
                                    else
                                    {
                                        <img width="40" height="40" style="border-radius: 50%; object-fit: cover;" src="~/IMG/stockuser.png" />
                                    }
                                </button>
                                <ul style="background-color:#313131;" class="dropdown-menu">
                                    <li><a style="margin:0px; padding:5px 12px; color:white;" class="dropdown-item" href="@Url.RouteUrl("Profil", new { userName = userNameUrl })"><i style="font-size:1.3rem;" class="bi bi-person"></i> Profil</a></li>
                                    <li><a style="margin:0px; padding: 5px 15px; color: white;" class="dropdown-item" href="/signout"><i style="font-size:1.3rem;" class="bi bi-box-arrow-right"></i> Çıkış Yap</a></li>
                                </ul>
                            }
                            else
                            {
                                <a style="margin-left:-15px !important;" href="@Url.RouteUrl("Giriş")"><i class="bi bi-person"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="content">
        <div class="videoposter">
            @foreach (var vv in Model.VideoInfo.Episode)
            {
                if (vv.URL != null)
                {
                    <div style="display: none;" class="poster">
                        <img src="~/IMG/@vv.BANNER" />
                        <i class="bi bi-play-circle"></i>
                    </div>
                }
                else
                {
                    if (vv.BANNER != null)
                    {
                        <div class="poster">
                            <img src="~/IMG/@vv.BANNER" />
                            <i class="bi bi-play-circle"></i>
                        </div>
                    }
                }
            }

            @foreach (var ez in Model.VideoInfo.Episode)
            {
                if (ez.URL != null)
                {
                    <iframe id="myIframe" style="width:100%; height:70vh;" tabindex="0" allowfullscreen></iframe>
                    <script>
                       window.addEventListener('load', function() {
                       var iframe = document.getElementById('myIframe');
                       iframe.src = '@ez.URL';
                       var timeout = setTimeout(function() {
                       alert('Video kaynağı yanıt vermiyor. Sayfa yeniden yüklenecek.');
                       location.reload();  // Sayfayı yeniden yükle
                       },10000);  // 15 saniye sonra timeout tetiklenecek (15000ms)

                       iframe.onload = function() {
                       clearTimeout(timeout);
                       };
                    });
                    </script>
                }
                else
                {
                    <video controls id="plyr">
                        @if (ez.EP2 != null)
                        {
                            <source src="~/Videos/@ez.EP2" size="480" type="video/mp4" tabindex="0" />
                        }
                        @if (ez.EP3 != null)
                        {
                            <source src="~/Videos/@ez.EP3" size="720" type="video/mp4" />
                        }
                        @if (ez.EP4 != null)
                        {
                            <source src="~/Videos/@ez.EP4" size="1080" type="video/mp4" />
                        }
                    </video>
                }
            }
        </div>
        <div style="margin-top:25px !important;" class="head">
            <div class="episodeandcomment">
                <div style="padding-right: 1rem; width: 100%;" class="episodetail">
                    @foreach (var y in Model.VideoInfo.Episode)
                    {
                        @*<img src="~/IMG/@y.BANNER" alt="anime izle, türkçe altyazı anime izle, anitsuki">*@
                        <div style="width:100%; height:140px; margin-left:0px !important;" class="detail">
                            <div style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; margin:0px 0px 2px 0px;" class="title">
                                <a href="@Url.RouteUrl("Anime Detay", new {animeID = y.TBLANIME.ID, animeName = y.TBLANIME.ANIMENAME.ToLower().Replace("ı", "i").Replace("ç", "c").Replace("ö", "o").Replace("ü", "u").Replace("ğ", "g").Replace("ş", "s").Replace(" ", "-").Replace("?", "").Replace("!", "").Replace(">", "").Replace("<", "").Replace("&", "").Replace("%", "").Replace("$", "").Replace("#", "").Replace("@", "").Replace(":", "").Replace(";", "").Replace("/", "").Replace("\\", "").Replace(".","").Replace(",",""), seasonNumber = y.TBLSEASON.SEASONNUMBER })">@y.TBLANIME.ANIMENAME </a>
                            </div>
                            <div style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; margin: 2px 0px; " class="episodename">
                                <span>S@(y.TBLSEASON.SEASONNUMBER)</span> - <span>B@(y.EPINUMBER)</span> @(y.EPISODENAME)
                            </div>
                            <div style="margin: 2px 0px; " class="time">
                                <i class="bi bi-clock"></i> @y.TIME
                            </div>
                            <div style="margin: 2px 0px; " class="date">
                                <i class="bi bi-calendar"></i> @y.DATE.Value.ToString("dd.MM.yyyy")
                            </div>
                            <div class="likeandunlikerating">
                                <div style="margin-bottom:2px;" class="rating">
                                    Beğendiniz mi?
                                </div>
                                <div class="likeandunlike">
                                    @{
                                        var userID = db.TBLUSER.Where(u => u.USERNAME == User.Identity.Name).Select(u => u.ID).FirstOrDefault();
                                        var likeExist = y.TBLEPISODELIKE.Any(y => y.USERID == userID);
                                        var liked = y.TBLEPISODELIKE.FirstOrDefault(y => y.USERID == userID)?.LIKESTATUS;
                                    }

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div class="like1 @(liked.HasValue && liked.Value ? "active" : "")" style="margin-right:10px;" data-comment-id="@y.ID">
                                            <a style="text-decoration: none; cursor: pointer; color: @(liked.HasValue && liked.Value ? "orange" : "white");" onclick="handleLikeOrUnlike1(this, @y.ID, @userID, true)">
                                                <i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i>
                                                <span id="like-count-@y.ID">@y.TBLEPISODELIKE.Where(z => z.LIKESTATUS == true).Count()</span>
                                            </a>
                                        </div>

                                        <div class="unlike1 @(liked.HasValue && !liked.Value ? "active" : "")" data-comment-id="@y.ID">
                                            <a style="text-decoration: none; cursor: pointer; color: @(liked.HasValue && !liked.Value ? "orange" : "white");" onclick="handleLikeOrUnlike1(this, @y.ID, @userID, false)">
                                                <i style="margin-right:2px;" class="bi bi-hand-thumbs-down"></i>
                                                <span id="unlike-count-@y.ID">@y.TBLEPISODELIKE.Where(z => z.LIKESTATUS == false).Count()</span>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="margin-right:15px;" class="like1" data-comment-id="@y.ID">
                                            <a style="text-decoration:none; color:white;" href="@Url.RouteUrl("Giriş")">
                                                <i style="margin-right:2px;" class="bi bi-hand-thumbs-up"></i>
                                                @y.TBLEPISODELIKE.Where(z => z.LIKESTATUS == true).Count()
                                            </a>
                                        </div>
                                        <div class="unlike1" data-comment-id="@y.ID">
                                            <a style="text-decoration:none; color:white;" href="@Url.RouteUrl("Giriş")">
                                                <i style="margin-right:2px;" class="bi bi-hand-thumbs-down"></i>
                                                @y.TBLEPISODELIKE.Where(z => z.LIKESTATUS == false).Count()
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @foreach (var ö in Model.VideoInfo.Episode)
                {
                    <div class="fansub">
