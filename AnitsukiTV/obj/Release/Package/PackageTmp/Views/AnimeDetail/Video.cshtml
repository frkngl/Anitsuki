    <div class="loader">

    </div>
    <div id="snow-container"></div>
    <header style="background-color: #000000;">
        <div class="container-xl">
            <div class="row">
                <div class="logo col-2">
                    <a href="@Url.RouteUrl("Anasayfa")"><img src="~/IMG/logo.png" alt="anime izle, türkçe altyazı anime izle, anitsuki"><img class="logomobile" src="~/IMG/aylogo.png" alt="anime izle, türkçe altyazı anime izle, anitsuki"></a>
