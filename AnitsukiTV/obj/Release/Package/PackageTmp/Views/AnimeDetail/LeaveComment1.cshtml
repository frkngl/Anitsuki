@model AnitsukiTV.Models.TBLEPISODECOMMENT
@{ AnitsukiTV.Models.AnitsukiTVEntities db = new AnitsukiTV.Models.AnitsukiTVEntities();}
@if (Session["id"] != null)
{
    AnitsukiTV.Models.TBLUSER user = db.TBLUSER.Find(Convert.ToInt32(Session["id"]));
    <form method="post">
        <input hidden name="EPISODEID" value="@ViewBag.deger" />
        <textarea name="COMMENT"></textarea>
        <button type="submit"><i class="bi bi-send"></i> Gönder</button>
        <img hidden src="~/IMG/@user.PICTURE" alt="Profil Fotoğrafı" />
        <span hidden>@user.USERNAME</span>
    </form>
}
else
{
    <div style="width:100%; height:100px;display:flex; align-items:center;justify-content:center;">
        <p style="font-size:1.1rem;color:#ffffff;">Düşüncelerinizi paylaşmak için <a style="text-decoration: none; color: #FF7F00;" href="/LoginSignIn/Login">Giriş Yapın</a></p>
    </div>
}

